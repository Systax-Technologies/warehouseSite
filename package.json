{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "dev": "concurrently -p \"[{name}]\" -n \"remix,tailwind\" -c \"red.bold,blue.bold,cyan.bold\" \"npm:dev:remix\" \"npm:dev:tailwind\"",
    "dev:remix": "remix dev",
    "dev:tailwind": "tailwindcss -o app/styles/tailwind.css --watch",
    "build": "npm run build:remix && npm run build:tailwind",
    "build:css": "tailwindcss -o ./app/styles.css",
    "build:remix": "NODE_ENV=production remix build",
    "start": "remix-serve build",
    "start:dev": "NODE_ENV=development node ./build/index.js",
    "type-check": "tsc --pretty --noEmit",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@prisma/client": "^3.15.0",
    "@remix-run/node": "^1.5.1",
    "@remix-run/react": "^1.5.1",
    "@remix-run/serve": "^1.5.1",
    "react": "^18.1.0",
    "react-dom": "^18.1.0"
  },
  "devDependencies": {
    "@heroicons/react": "^1.0.6",
    "@remix-run/dev": "^1.5.1",
    "@remix-run/eslint-config": "^1.5.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/react": "^18.0.12",
    "@types/react-dom": "^17.0.17",
    "concurrently": "^7.2.1",
    "eslint": "^8.15.0",
    "jsonwebtoken": "^8.5.1",
    "prisma": "^3.15.0",
    "tailwindcss": "^3.0.24",
    "typescript": "^4.6.4"
  },
  "engines": {
    "node": ">=14"
  }
}
